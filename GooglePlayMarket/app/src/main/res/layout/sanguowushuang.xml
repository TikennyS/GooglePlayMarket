<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/image_sanguowushuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/image_sanguo_title"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/image_sanguo_kaishi"
                android:alpha="0.8"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/sanguo_biaoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_sanguowushuang"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/image_sanguo_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_sanguo_name"
                android:layout_toRightOf="@+id/image_sanguo_icon"
                android:layout_marginLeft="12dp"
                android:text="真三国无双·斩"
                android:textSize="16sp"
                android:textColor="#000000"
                android:alpha="0.87"/>
            <TextView
                android:id="@+id/text_sanguo_xinxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_sanguo_name"
                android:layout_toRightOf="@+id/image_sanguo_icon"
                android:layout_marginLeft="12dp"
                android:text="NEXON  Company"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/button_anzhuang"
                android:layout_width="115dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/text_sanguo_xinxi"
                android:background="@color/colorPrimaryDark"
                android:text="安装"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_anzhuang"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="包含广告·应用内购买"
                android:textSize="12sp"/>
        </RelativeLayout>
        <View
            android:id="@+id/fengexian_8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sanguo_biaoti"
            android:layout_marginTop="8dp"
            android:background="#d7d7d7" />
        <RelativeLayout
            android:id="@+id/sanguo_xiazai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fengexian_8"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/image_sanguo_xiazailiang"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/image_sanguo_xiazailiang"/>
            <ImageView
                android:id="@+id/image_sanguo_dianzanliang"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/image_sanguo_xiazailiang"
                android:layout_marginLeft="40dp"
                android:src="@drawable/image_sanguo_dianzanliang"/>
            <ImageView
                android:id="@+id/image_sanguo_leixing"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/image_sanguo_dianzanliang"
                android:layout_marginLeft="40dp"
                android:src="@drawable/image_sanguo_leibie"/>
            <ImageView
                android:id="@+id/image_sanguo_leisi"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/image_sanguo_leixing"
                android:layout_marginLeft="40dp"
                android:src="@drawable/image_sanguo_leisi"/>
            <TextView
                android:id="@+id/text_sanguo_xiazailiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_sanguo_xiazailiang"
                android:layout_marginTop="8dp"
                android:text="下载次数"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/text_sanguo_dianzanliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_sanguo_xiazailiang"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/text_sanguo_xiazailiang"
                android:layout_marginLeft="32dp"
                android:text="下载次数"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/text_sanguo_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_sanguo_xiazailiang"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/text_sanguo_dianzanliang"
                android:layout_marginLeft="32dp"
                android:text="下载次数"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/text_sanguo_leisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_sanguo_xiazailiang"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/text_sanguo_leixing"
                android:layout_marginLeft="32dp"
                android:text="下载次数"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
            android:id="@+id/fengexian_9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sanguo_xiazai"
            android:layout_marginTop="8dp"
            android:background="#d7d7d7" />
        <LinearLayout
            android:id="@+id/sanguo_jianjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fengexian_9"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_sanguo_wushuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="无双极致动作！"
                android:textColor="#000000"
                android:textSize="16sp"
                android:alpha="0.87"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="KOEI正宗无双动作，传说回归！"
                android:textColor="#000000"
                android:textSize="16sp"
                android:alpha="0.87"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/image_sanguo_liaojie"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#00000000"
                android:text="了解更多"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_sanguo_neibu"
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:layout_below="@+id/sanguo_jianjie"
            android:background="@drawable/sanguowus_neibu"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/image_sanguo_neibu">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#e2e1e1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="为此应用评分"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:alpha="0.87"/>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:isIndicator="false" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="提交"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="#00000000"/>
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/navigation_header_photo" />
        </FrameLayout>


</RelativeLayout>

</ScrollView>